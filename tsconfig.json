{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "paths": {
      "~auth/*": ["auth/*"],
      "~src/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "bin", "dist"]
}
